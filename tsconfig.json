{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["node", "express"],
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src","global.d.ts"]
}